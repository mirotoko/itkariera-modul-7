@model List<string>

@{
    ViewData["Title"] = "Home Page";
}

<div class="centered-box">
    <div class="text-center">
        <h1 class="display-4">lek kitarski magazin</h1>
    </div>

    <div class="container mt-5">
        <h1 class="mb-4">Choose Guitar Body Type</h1>
        <div class="row g-4">
            @foreach (var body in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0 rounded-4 p-3 card-body hover-target">
                        <h5 class="card-title" id="cardTitle" data-body="@body">@body</h5>
                        <p class="card-text text-muted">View all @body guitars</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        background: url('/images/amps.jpg') no-repeat center center fixed;
        background-size: cover;
        position: relative;
        min-height: 100vh;
        font-family: Arial, sans-serif;
    }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 100vw;
            background-color: rgba(0, 0, 0, 0.4);
            z-index: 0;
        }

    .centered-box {
        position: relative;
        z-index: 1;
        max-width: 1200px;
        margin: auto;
        margin-top: 10vh;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
        padding: 40px;
    }

    .hover-target {
        transition: background-color 0.3s ease;
    }

        .hover-target:hover {
            cursor: pointer;
        }
</style>

<script>
    document.querySelectorAll(".hover-target").forEach(card => {
        card.addEventListener('mousemove', e => {
            card.style.backgroundColor = '#eee'
        });
        card.addEventListener('mouseleave', e => {
            card.style.backgroundColor = '#fff'
        });

        card.addEventListener("click", e => {
            const titleElement = card.querySelector(".card-title");
            const bodyType = titleElement.dataset.body;

            window.location.href = `/Guitars?searchString=${encodeURIComponent(bodyType)}`;
        });
    });
</script>