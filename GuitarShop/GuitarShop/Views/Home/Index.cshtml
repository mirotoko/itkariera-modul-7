@model List<string>

@{
    ViewData["Title"] = "Home Page";
}

<div class="centered-box">
    <h1>Light Guitar-ish shop</h1>
    <h2>Choose Guitar Body Type</h2>
    <div class="grid">
        @foreach (var body in Model)
        {
            <div class="card h-100 shadow-sm border-1 rounded-4 p-3 card-body hover-target">
                <h5 class="card-title" id="cardTitle" data-body="@body">@body</h5>
                <p class="card-text text-muted" href="#">View all @body guitars</p>
            </div>
        }
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        background: url('/images/amps.jpg') no-repeat center center fixed;
        background-size: cover;
        position: relative;
        min-height: 100vh;
        font-family: 'Poppins', sans-serif; /* Modern font */
        color: #333;
    }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 100vw;
            background-color: rgba(0, 0, 0, 0.5); /* slightly darker for readability */
            z-index: 0;
        }

    .centered-box {
        position: relative;
        z-index: 1;
        max-width: 1200px;
        margin: auto;
        margin-top: 10vh;
        background-color: #ffffff;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
        padding: 50px 40px;
        text-align: center;
    }

        .centered-box h1 {
            font-size: 2.8rem;
            font-weight: 600;
            margin-bottom: 30px;
        }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .card {
        background-color: #eed48d;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: left
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 25px rgba(0,0,0,0.2);
            background-color: #ffffff;
        }

        .card h3 {
            margin-top: 0;
            font-size: 1.4rem;
            margin-bottom: 10px;
            color: #111;
        }

        .card a {
            text-decoration: none;
            color: #007BFF;
            font-weight: 500;
            font-size: 0.95rem;
        }

            .card a:hover {
                text-decoration: underline;
            }

</style>

<script>
    document.querySelectorAll(".hover-target").forEach(card => {
        card.addEventListener('mousemove', e => {
            card.style.backgroundColor = '#e5c75e'
        });
        card.addEventListener('mouseleave', e => {
            card.style.backgroundColor = '#eed48d'
        });

        card.addEventListener("click", e => {
            const titleElement = card.querySelector(".card-title");
            const bodyType = titleElement.dataset.body;

            window.location.href = `/Guitars?searchString=${encodeURIComponent(bodyType)}`;
        });
    });
</script>